public class BuildArrayByPermutation {
    public int[] buildArray(int[] nums) {  //method to build an array based on the permutation
        int[] ans = new int[nums.length];  //initialize new array with same size of nums, obvioulsy u know the reason 
        for (int i = 0; i < nums.length; i++) {  //loop till last, basic hai
            ans[i] = nums[nums[i]]; // logic hai , ki naye loop mein kaise daloge value
        }
        return ans; // returns
    }

    public static void main(String[] args) {
        int[] nums = {0, 2, 1, 5, 3, 4};
        BuildArrayByPermutation builder = new BuildArrayByPermutation();
        int[] result = builder.buildArray(nums);

        System.out.print("Result: ");
        for (int num : result) {
            System.out.print(num + " ");
        }
    }
}
